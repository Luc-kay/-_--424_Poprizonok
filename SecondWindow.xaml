                <ComboBoxItem>По возрастанию</ComboBoxItem>
            </ComboBox>
            <ComboBox Grid.Column="3" Margin="5" VerticalAlignment="Center" FontFamily="Comic Sans MS" FontSize="14">
                <ComboBoxItem IsSelected="True">Фильтр 1</ComboBoxItem>
                <ComboBoxItem>Фильтр 2</ComboBoxItem>
            </ComboBox>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0.333,0">
                <Border BorderBrush="LightGray" BorderThickness="2" Margin="5"/>
