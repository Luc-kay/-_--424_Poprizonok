                    <Rectangle Width="78" Margin="0,0,0,-0.333">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="picture.png"/>
                        </Rectangle.Fill>
                    </Rectangle>
                    <StackPanel Margin="10 0 0 0" >

                        <TextBlock Foreground="Gray" FontSize="14" Width="398" FontFamily="Comic Sans MS"><Run Text="Тип "/><Run Text="| "/><Run Text="На"/><Run Text="именование агента"/></TextBlock>

                        <StackPanel Orientation="Horizontal" Margin=" 0 15 0 0">
                            <Button Content="Перейти" Margin="0 0 10 0" Padding="10 1 10 1" Foreground="Gray" Background="#FFF9969E" BorderBrush="LightGray" BorderThickness="2" RenderTransformOrigin="0.58,0.803" FontFamily="Comic Sans MS" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

        </Grid>

        <StackPanel Height="30" Grid.Row="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Click="btn_1" Content="1" Margin="5" Padding="3 1" Foreground="Gray" Background="White" BorderBrush="LightGray" BorderThickness="2"></Button>
            <Button Content="2" Margin="0 5 5 5" Padding="3 1" Foreground="Gray" Background="#FFF9969E" BorderBrush="#FFF9969E" BorderThickness="2"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="400,17.8,10,258.6" Background="#43DCFE" Grid.Row="1">
